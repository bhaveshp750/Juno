<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:padding="12dp"
    >

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/image_bg_gradient">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="6dp"
        android:src="@drawable/ic_bitcoin"
        android:contentDescription="@string/icon"
        android:layout_gravity="center"
        />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crypto Account"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textColor="?attr/colorOnSecondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/subtitle"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BTC, ETH, &amp; USDC"
            android:textSize="14sp"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center|end"
        android:visibility="gone">
        <Button
            android:id="@+id/deposit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deposit"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/buy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy"
            android:textAllCaps="false"
            />
    </LinearLayout>

   <RelativeLayout
       android:visibility="visible"
       android:id="@+id/price_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$16,862.22"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textColor="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$300.22(+21.51%)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#599F27"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/icon"
            android:src="@drawable/ic_growing_price"
            android:layout_toStartOf="@id/subtitle2"
            android:layout_alignParentBottom="true" />

   </RelativeLayout>

</RelativeLayout>